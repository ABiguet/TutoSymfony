{% extends 'base.html.twig' %}

{% block title %}Toutes les recettes{% endblock %}

{% block body %}
    <h1>Toutes les recettes</h1>
    <a class="btn btn-primary" href="{{ path('recipe.create') }}">Créer une recette</a>
    <table class="table">
        <thead>
        <tr>
            <th>Titre</th>
            <th>Ations</th>
            <th>Crée le</th>
            <th>Modifié le</th>
        </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
        <tr>
            <td><a href="{{ path('recipe.show', {slug: recipe.slug, id: recipe.id}) }}">{{ recipe.title }}</a></td>
            <td>
                <div class="d-flex gap-2">
                    <a class="btn btn-primary" href="{{ path('recipe.edit', {id: recipe.id}) }}">Modifier</a>
                    <form action="{{ path('recipe.delete', { id: recipe.id }) }}" method="post">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger">Supprimer</button>
                    </form>
                </div>

            </td>
            <td>{{ recipe.createdAt | date('d-m-Y') }}</td>
            <td>{{ recipe.updatedAt | date('d-m-Y') }}</td>
        </tr>
        </tbody>
        {% endfor %}
    </table>

{% endblock %}
